{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "noEmit": false,
    "outDir": "dist",
    "declaration": false,
    "sourceMap": true,
    "rootDir": "src"
  },
  "include": [
    "src/mcp-server/**/*",
    "src/typescribe-agent/**/*",
    "src/sample-api/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
